{cover_enabled, true}.

{deps, [
        {jiffy, ".*", {git, "https://github.com/davisp/jiffy.git", {tag, "0.8.5"}}}
       ]}.

{erl_opts, [fail_on_warning,
            warn_export_all,
            warn_unused_import,
            warn_untyped_record,
            debug_info]}.

{eunit_opts, [verbose,
              {report, {eunit_surefire, [{dir, "."}]}}
             ]}.
